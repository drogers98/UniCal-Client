    'title' => 'UniCal embed settings',
    'description' => 'Configuration for UniCal embed',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('unical_client_form'),
    'access arguments' => array('administer blocks'),
    'type' => MENU_NORMAL_ITEM,
